---
export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogImageAlt?: string;
  noindex?: boolean;
  twitterTitle?: string;
  twitterDescription?: string;
  geoRegion?: string;
  geoPlacename?: string;
  geoPosition?: string;
  keywords?: string;
  structuredData?: any[];
}

const {
  title,
  description = "Multi-disciplinary digital professional specializing in WordPress development, content writing, speaking/seminars, and photography.",
  ogImage = "/images/clifton-canady-default-og.jpg",
  ogImageAlt = "Clifton T. Canady - WordPress Developer, Content Writer, Speaker & Photographer",
  noindex = false,
  twitterTitle,
  twitterDescription,
  geoRegion,
  geoPlacename,
  geoPosition,
  keywords,
  structuredData = []
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="Clifton T. Canady" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={twitterTitle || title} />
    <meta name="twitter:description" content={twitterDescription || description} />
    <meta name="twitter:site" content="@cliftoncanady" />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content={ogImageAlt} />

    <!-- Geographic Meta Tags -->
    {geoRegion && <meta name="geo.region" content={geoRegion} />}
    {geoPlacename && <meta name="geo.placename" content={geoPlacename} />}
    {geoPosition && (
      <>
        <meta name="geo.position" content={geoPosition} />
        <meta name="ICBM" content={geoPosition} />
      </>
    )}

    <!-- Keywords -->
    <meta name="keywords" content={keywords || "AI Boardroom, Upstate SC, tech company leaders, strategic planning, business advisory, growth plateau solutions, Greenville SC, Spartanburg SC, Anderson SC, tech consulting"} />
    
    <!-- Person Schema Markup -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Clifton T. Canady",
      "jobTitle": "WordPress Developer, Content Writer, Speaker & Photographer",
      "description": "Multi-disciplinary digital professional specializing in WordPress development, content writing, speaking/seminars, and photography.",
      "telephone": "+1-864-752-8017",
      "url": "https://cliftoncanady.com",
      "knowsAbout": ["WordPress Development", "Content Writing", "Speaking", "Photography", "AI Boardroom", "Strategic Planning"],
      "hasOccupation": [
        {
          "@type": "Occupation",
          "name": "WordPress Developer"
        },
        {
          "@type": "Occupation", 
          "name": "Content Writer"
        },
        {
          "@type": "Occupation",
          "name": "Professional Speaker"
        },
        {
          "@type": "Occupation",
          "name": "Photographer"
        },
        {
          "@type": "Occupation",
          "name": "Strategic Business Advisor"
        }
      ]
    }
    </script>

    <!-- AI Boardroom Service Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Service",
      "name": "AI Boardroom Strategic Advisory",
      "description": "Strategic advisory sessions for tech company leaders in Upstate South Carolina. Break through growth plateaus with AI-powered strategic planning.",
      "provider": {
        "@type": "Person",
        "name": "Clifton T. Canady",
        "telephone": "+1-864-752-8017",
        "url": "https://cliftoncanady.com"
      },
      "serviceType": "Business Consulting",
      "category": "Strategic Planning",
      "audience": {
        "@type": "Audience",
        "name": "Tech Company Leaders"
      },
      "areaServed": {
        "@type": "Place",
        "name": "Upstate South Carolina",
        "containsPlace": [
          {
            "@type": "Place",
            "name": "Greenville, SC"
          },
          {
            "@type": "Place", 
            "name": "Spartanburg, SC"
          },
          {
            "@type": "Place",
            "name": "Anderson, SC"
          }
        ]
      },
      "offers": {
        "@type": "Offer",
        "price": "125",
        "priceCurrency": "USD",
        "description": "Founding Member Rate - Limited to first 12 leaders",
        "availability": "https://schema.org/LimitedAvailability"
      }
    }
    </script>

    <!-- Local Business Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "AI Boardroom Upstate SC",
      "description": "Strategic advisory sessions for tech company leaders facing growth plateaus. AI-powered strategic planning in Upstate South Carolina.",
      "url": "https://cliftoncanady.com/ai-boardroom-upstate-sc",
      "telephone": "+1-864-752-8017",
      "email": "hello@cliftoncanady.com",
      "founder": {
        "@type": "Person",
        "name": "Clifton T. Canady"
      },
      "serviceArea": {
        "@type": "Place",
        "name": "Upstate South Carolina"
      },
      "knowsAbout": [
        "Strategic Planning",
        "AI Boardroom",
        "Tech Company Growth",
        "Business Advisory",
        "Growth Plateau Solutions"
      ]
    }
    </script>

    <!-- FAQ Schema Markup -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Do we need AI experience to attend AI Boardroom Upstate SC?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "No! This method is designed for tech company leaders who want to leverage AI for strategic thinking, regardless of current AI knowledge."
          }
        },
        {
          "@type": "Question",
          "name": "Is AI Boardroom just for Upstate SC companies?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes! These exclusive in-person sessions are designed specifically for Upstate SC (Greenville-Spartanburg-Anderson) tech company leaders. The intimate, face-to-face format requires us to focus on one region to build genuine strategic relationships among local peers."
          }
        },
        {
          "@type": "Question",
          "name": "How much time does AI Boardroom strategic planning require?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "The AI Boardroom method is designed for busy executives. Most strategic sessions take 30-60 minutes, and the workshop is a half-day intensive."
          }
        },
        {
          "@type": "Question",
          "name": "What's different about AI Boardroom versus other business consulting?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "I've worked inside multiple Upstate tech companies and seen these exact challenges firsthand. This isn't theoretical - it's based on real patterns I've observed across multiple organizations."
          }
        },
        {
          "@type": "Question",
          "name": "Can multiple people from our company attend AI Boardroom sessions?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes! Leadership teams often benefit from attending together. Contact us about team rates for 2+ attendees from the same company."
          }
        }
      ]
    }
    </script>

    <!-- Custom Structured Data -->
    {structuredData.map(schema => (
      <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    ))}
    
    <!-- Performance Optimization -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//fonts.gstatic.com">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&family=Roboto+Mono:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Preload Critical Images -->
    <link rel="preload" as="image" href="/images/ai-boardroom.jpg">
    <link rel="preload" as="image" href="/images/logo/SVG/AI-bordroom-logo.svg">
    
    <!-- Google Tag Manager -->
    {import.meta.env.PROD && Astro.url.hostname === 'cliftoncanady.com' && (
    <script is:inline>
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-K2S4Q89Z');
    </script>
    )}
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    {import.meta.env.PROD && Astro.url.hostname === 'cliftoncanady.com' && (
    <noscript>
      <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-K2S4Q89Z"
        height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    )}
    
    <slot />
    
    <!-- Scripts -->
    <script>
      // HeadroomJS initialization
      import('headroom.js').then((module: any) => {
        const Headroom = module.default;
        const header = document.querySelector('#navigation');
        if (header) {
          const headroom = new Headroom(header, {
            offset: 100,
            tolerance: { up: 10, down: 10 },
            classes: {
              initial: "headroom",
              pinned: "headroom--pinned", 
              unpinned: "headroom--unpinned"
            }
          });
          headroom.init();
        }
      });
      
      // Basic smooth scrolling
      document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const href = (e.target as HTMLAnchorElement).getAttribute('href');
            const target = href ? document.querySelector(href) : null;
            if (target) {
              target.scrollIntoView({ behavior: 'smooth' });
            }
          });
        });
      });
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/globals.css';
  
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: 'Poppins', system-ui, sans-serif;
  }
  
  p {
    font-family: 'Roboto Mono', monospace !important;
  }
</style>