---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';

// Test components - add imports here as needed
import OurStoryHorizontal from '../components/OurStoryHorizontal.astro';
---

<Layout title="Test Page | Clifton T. Canady" noindex={true}>
  <Navigation />
  <main>
    <Hero />

    <!-- Test Components Section -->
    <section class="py-12 bg-muted">
      <div class="container mx-auto px-4">
        <div class="text-center mb-8">
          <span class="inline-block px-4 py-2 bg-accent text-white text-sm font-bold rounded-full mb-4">
            DRAFT - Testing Page
          </span>
          <h2 class="text-3xl font-bold text-foreground" style="font-family: 'Poppins', sans-serif;">
            Component Testing Area
          </h2>
          <p class="text-muted-foreground mt-2">
            This page is not indexed. Use it to preview new components.
          </p>
        </div>
      </div>
    </section>

    <!-- OurStoryHorizontal Component Test - Horizontal Timeline with Swiper -->
    <OurStoryHorizontal />

  </main>
  <Footer />
</Layout>
