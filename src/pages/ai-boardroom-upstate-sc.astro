---
import Layout from '../layouts/Layout.astro';
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { Card, CardContent } from "@/components/ui/card";
import FAQAccordion from "../components/FAQAccordion";
import ProcessSection from "../components/ProcessSection.astro";
---

<Layout 
  title="AI Boardroom Upstate SC | Strategic Advisory for Tech Company Leaders | Growth Plateau Solutions"
  description="AI Boardroom strategic advisory sessions for Upstate SC tech company leaders. Break through growth plateaus with AI-powered strategic planning. Exclusive in-person sessions in Greenville, Spartanburg, Anderson area."
>
  <main>
    <!-- Header Section -->
    <header class="ai-boardroom-header bg-white shadow-sm">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-center md:justify-between py-4">
          <!-- Logo -->
          <div class="flex items-center">
            <img 
              src="/logo/SVG/AI-bordroom-logo.svg" 
              alt="AI Boardroom Upstate SC - Strategic Advisory for Tech Company Leaders" 
              class="h-12 w-auto"
            >
          </div>
          
          <!-- Call to Action Button -->
          <div class="hidden md:block">
            <a href="#reserve" class="orange-btn inline-flex items-center justify-center px-6 py-3 font-semibold rounded-md shadow-lg transform hover:scale-105 transition-all duration-200">
              Reserve Your Seat
            </a>
          </div>
        </div>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="ai-boardroom-hero h-screen md:h-[700px] flex items-center justify-center relative text-primary-foreground overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url('/ai-boardroom.jpg');"></div>
      
      <!-- Glassy Overlay -->
      <div class="absolute inset-0 bg-gradient-to-br from-primary/85 to-primary/80 backdrop-blur-sm"></div>
      <div class="absolute inset-0 bg-white/10 backdrop-blur-[2px]"></div>
      
      <div class="max-w-6xl mx-auto px-4 py-24 relative z-10">
        <div class="w-full md:w-3/5 text-center md:text-left">
          
          <!-- Badge -->
          <div class=" badge-text inline-flex items-center gap-2 bg-white/20 backdrop-blur rounded-full px-4 py-2 mb-6">
            <span class="text-white font-semibold uppercase badge-text">AI Boardrooms</span>
          </div>
          
          <!-- Main Headline -->
          <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
            Is Your Tech Company Stuck Between Startup and Scale?
          </h1>
          
          <!-- Subheadline -->
          <p class="text-xl md:text-2xl opacity-90 font-semibold mb-8">
            Break Through Growth Plateaus with AI-Powered Strategic Planning Sessions in Greenville, Spartanburg & Anderson
          </p>
          <!-- Call to Action Button -->
          <a href="#reserve" class="orange-btn inline-flex items-center justify-center text-lg px-8 py-4 font-semibold rounded-md shadow-lg transform hover:scale-105 transition-all duration-200">
            Reserve My Leadership Seat
          </a>
          
        </div>
      </div>
    </section>

    <!-- Urgency Section -->
    <section class="ai-boardroom-urgency py-8 bg-accent">
      <div class="container mx-auto px-4">
        <div class="text-center">
          <p class="text-2xl font-bold text-white">
            Next session: October 15th - Only 5 seats remaining for company leaders.
          </p>
        </div>
      </div>
    </section>

    <!-- The Problem Section -->
    <section class="ai-boardroom-problem py-24 bg-muted/30">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-foreground">
            Strategic Planning Solutions for Upstate SC Tech Companies Facing Growth Plateaus
          </h2>
          
          <p class="text-lg text-muted-foreground mb-12 max-w-3xl mx-auto">
            Stop making million-dollar strategic decisions with only internal perspectives. Join 11 other Upstate tech company leaders in exclusive, in-person AI Boardroom sessions. Finally, strategic planning that happens face-to-face, not through another Zoom screen.
          </p>
          
          <div class="grid md:grid-cols-2 gap-8 mt-12">
            <Card>
              <CardContent className="p-8">
                <div class="text-left space-y-4">
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-destructive rounded-full mt-2 flex-shrink-0"></div>
                    <p>Too big for startup advice, too small for enterprise consulting</p>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-destructive rounded-full mt-2 flex-shrink-0"></div>
                    <p>Making strategic decisions with only internal perspectives</p>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-destructive rounded-full mt-2 flex-shrink-0"></div>
                    <p>Revenue growth has plateaued in the middle market</p>
                  </div>
                </div>
              </CardContent>
            </Card>
            
            <Card>
              <CardContent className="p-8">
                <div class="text-left space-y-4">
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-destructive rounded-full mt-2 flex-shrink-0"></div>
                    <p>Decision fatigue from wearing multiple leadership hats</p>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-destructive rounded-full mt-2 flex-shrink-0"></div>
                    <p>Feeling isolated from other tech company leaders facing similar challenges</p>
                  </div>
                </div>
              </CardContent>
            </Card>
          </div>
        </div>
      </div>
    </section>

    <!-- The Solution Section -->
    <section class="py-24 bg-gray-100 solutions-section">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-foreground">
            Introducing: The AI Boardroom Method for Tech Company Leaders
          </h2>
          
          <p class="text-lg text-muted-foreground mb-12">
            What You'll Learn:
          </p>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            <!-- AI Advisory Boardrooms -->
            <div class="text-center p-6 bg-muted/20 rounded-lg">
              <div class="w-12 h-12 mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="font-semibold text-sm mb-2">AI Advisory Boardrooms</h3>
              <p class="text-xs text-muted-foreground">Assemble virtual advisory boardrooms using AI technology</p>
            </div>
            
            <!-- Strategic Frameworks -->
            <div class="text-center p-6 bg-muted/20 rounded-lg">
              <div class="w-12 h-12 mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
              </div>
              <h3 class="font-semibold text-sm mb-2">Strategic Frameworks</h3>
              <p class="text-xs text-muted-foreground">Frameworks used by companies that scaled successfully</p>
            </div>
            
            <!-- Decision Processes -->
            <div class="text-center p-6 bg-muted/20 rounded-lg">
              <div class="w-12 h-12 mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <h3 class="font-semibold text-sm mb-2">Decision Processes</h3>
              <p class="text-xs text-muted-foreground">Processes that eliminate leadership isolation</p>
            </div>
            
            <!-- Growth Methods -->
            <div class="text-center p-6 bg-muted/20 rounded-lg">
              <div class="w-12 h-12 mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
              </div>
              <h3 class="font-semibold text-sm mb-2">Growth Methods</h3>
              <p class="text-xs text-muted-foreground">Proven methods to break through growth plateaus</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Authority Section (Guide Credentials) -->
    <section class="ai-boardroom-authority py-16" style="background-color: #F66733;">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <!-- Mobile Layout -->
          <div class="lg:hidden">
            <h2 class="text-4xl md:text-5xl font-bold mb-8 leading-tight text-white text-center">
              Meet Your Strategic Guide: Clifton Canady 
            </h2>
            
            <!-- Image First on Mobile -->
            <div class="flex justify-center mb-8">
              <div class="relative">
                <img 
                  src="/clifton-canady-headstot.jpg" 
                  alt="Clifton Canady - Strategic Guide" 
                  class="w-[300px] h-[300px] object-cover rounded-lg shadow-xl"
                >
              </div>
            </div>
            
            <!-- Content After Image on Mobile -->
            <div class="text-white">
              <p class="text-lg mb-8 leading-relaxed opacity-90 text-center">
                "After 20+ years working inside multiple Upstate tech companies, I kept seeing the same pattern: brilliant technical teams hitting the same strategic walls during growth phases. The problem wasn't the technology or the talent - it was strategic isolation. Leadership teams making million-dollar decisions with only internal perspectives. So I stepped back, mastered AI-powered strategic thinking, and developed the AI Boardroom method to solve from the outside what I couldn't fix from the inside."
              </p>
            </div>
          </div>
          
          <!-- Desktop Layout -->
          <div class="hidden lg:grid lg:grid-cols-2 gap-12 items-center">
            <!-- Left Side - Content -->
            <div class="text-white">
              <h2 class="text-4xl md:text-5xl font-bold mb-8 leading-tight">
                Meet Your Strategic Guide: Clifton Canady 
              </h2>
              
              <p class="text-lg mb-8 leading-relaxed opacity-90">
                "After 20+ years working inside multiple Upstate tech companies, I kept seeing the same pattern: brilliant technical teams hitting the same strategic walls during growth phases. The problem wasn't the technology or the talent - it was strategic isolation. Leadership teams making million-dollar decisions with only internal perspectives. So I stepped back, mastered AI-powered strategic thinking, and developed the AI Boardroom method to solve from the outside what I couldn't fix from the inside."
              </p>
            </div>
            
            <!-- Right Side - Image -->
            <div class="flex justify-center lg:justify-end">
              <div class="relative">
                <img 
                  src="/clifton-canady-headstot.jpg" 
                  alt="Clifton Canady - Strategic Guide" 
                  class="w-[500px] h-[500px] object-cover rounded-lg shadow-xl"
                >
              </div>
            </div>
          </div>
          
          <!-- Three Column Features -->
          <div class="grid md:grid-cols-3 gap-8 mt-16 text-white">
            <div>
              <div class="border-b-2 border-white/30 pb-4 mb-4">
                <h3 class="text-xl font-semibold" style="font-size: 1.25rem; text-align: inherit;">Experience</h3>
              </div>
              <p class="text-sm opacity-80" style="font-size: 0.875rem;">
                20+ years inside Upstate tech companies. Witnessed the middle-market growth plateau firsthand at multiple organizations.
              </p>
            </div>
            
            <div>
              <div class="border-b-2 border-white/30 pb-4 mb-4">
                <h3 class="text-xl font-semibold" style="font-size: 1.25rem; text-align: inherit;">Tech Leader</h3>
              </div>
              <p class="text-sm opacity-80" style="font-size: 0.875rem;">
                Early AI adopter since 2023. Current Greenville WordPress Meetup organizer. Deep understanding of tech leadership challenges.
              </p>
            </div>
            
            <div>
              <div class="border-b-2 border-white/30 pb-4 mb-4">
                <h3 class="text-xl font-semibold" style="font-size: 1.25rem; text-align: inherit;">Strategic Expert</h3>
              </div>
              <p class="text-sm opacity-80" style="font-size: 0.875rem;">
                Adopted the AI Boardroom method from Corey Creed. I've seen what works and what doesn't from the inside. Now I help other companies avoid the same strategic pitfalls.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <ProcessSection 
      steps={[
        {
          number: "01",
          title: "Strategic Discovery", 
          description: "Identify your growth plateau challenges and assess strategic readiness",
          icon: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z",
          color: "primary",
          features: ["15-minute strategic consultation", "Growth readiness evaluation", "Challenge identification"]
        },
        {
          number: "02",
          title: "Exclusive Enrollment",
          description: "Join the elite cohort of Upstate tech leaders and prepare for transformation", 
          icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
          color: "accent",
          features: ["Founding member pricing ($125)", "Strategic preparation materials", "Peer network connections"]
        },
        {
          number: "03", 
          title: "Strategic Transformation",
          description: "Execute breakthrough strategies and implement AI-powered frameworks",
          icon: "M13 7h8m0 0v8m0-8l-8 8-4-4-6 6",
          color: "success",
          features: ["In-person intensive session", "AI-powered decision frameworks", "90-day implementation plan"]
        }
      ]}
      cta={{
        title: "Ready to Transform Your Tech Company?",
        subtitle: "Join the exclusive cohort of Upstate SC leaders breaking through growth plateaus", 
        buttonText: "Start Your Strategic Transformation",
        buttonLink: "#reserve"
      }}
    />

    <!-- What's Coming Section -->
    <section class="ai-boardroom-coming py-20 bg-gradient-to-br from-gray-50 to-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <!-- Section Header -->
          <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold mb-6 text-primary">
              Strategic Planning Sessions for Upstate SC Tech Company Growth
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Exclusive, in-person strategic planning sessions designed specifically for established tech companies in the Upstate SC region.
            </p>
          </div>
          
          <!-- Session Cards -->
          <div class="grid lg:grid-cols-2 gap-12">
            <!-- Strategic Planning Intensive -->
            <div class="group relative flex">
              <div class="bg-white rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 p-8 border border-gray-100 flex flex-col w-full">
                <div class="mb-6">
                  <div class="w-16 h-16 bg-gradient-to-br from-primary to-primary/80 rounded-xl flex items-center justify-center mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                  </div>
                  <h3 class="text-2xl font-bold text-primary mb-2">Strategic Planning Intensive</h3>
                  <p class="text-lg text-primary font-semibold">AI Boardroom Fundamentals</p>
                </div>
                
                <div class="space-y-4">
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-gray-700">Exclusive in-person sessions in Upstate SC</p>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-gray-700">Interactive workshops with real strategic challenges</p>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-gray-700">Limited to 12 company leaders per session</p>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-gray-700">Face-to-face strategic planning - no Zoom fatigue</p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Growth Breakthrough Workshop -->
            <div class="group relative flex">
              <div class="bg-white rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 p-8 border border-gray-100 flex flex-col w-full">
                <div class="mb-6">
                  <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                    </svg>
                  </div>
                  <h3 class="text-2xl font-bold text-primary mb-2">Growth Breakthrough Workshop</h3>
                  <p class="text-lg text-orange-600 font-semibold">Strategic Growth</p>
                </div>
                
                <div class="space-y-4">
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-gray-700">Monthly exclusive sessions</p>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-gray-700">Intimate, focused discussions</p>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-gray-700">Real-world case studies from Upstate companies</p>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-gray-700">Actionable strategies you can implement immediately</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Email Capture / CTA Section -->
    <section id="reserve" class="ai-boardroom-cta py-24 bg-gradient-to-br from-primary to-primary/80 text-primary-foreground">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Join AI Boardroom Upstate SC - Reserve Your Strategic Advisory Seat
          </h2>
          
          <div class="bg-white/10 backdrop-blur rounded-lg p-8 mb-8">
            <div class="text-center mb-8">
              <p class="text-2xl font-bold text-accent mb-2">$125</p>
              <p class="text-sm opacity-90">Founding Member Rate</p>
              <p class="text-xs opacity-70">Limited to first 12 leaders</p>
            </div>
            
            <!-- Contact Form Placeholder -->
            <div class="space-y-4 text-left">
              <div>
                <label class="block text-sm font-medium mb-2">Company Name</label>
                <input type="text" class="w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-white/60" placeholder="Your Company Name">
              </div>
              <div>
                <label class="block text-sm font-medium mb-2">Your Name & Title</label>
                <input type="text" class="w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-white/60" placeholder="John Smith, CEO">
              </div>
              <div>
                <label class="block text-sm font-medium mb-2">Email Address</label>
                <input type="email" class="w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-white/60" placeholder="your@email.com">
              </div>
              <div>
                <label class="block text-sm font-medium mb-2">Biggest Strategic Challenge (Optional)</label>
                <textarea class="w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-white/60" rows="3" placeholder="What's your biggest strategic challenge right now?"></textarea>
              </div>
            </div>
            
            <Button size="lg" className="w-full mt-6 text-lg py-6 bg-accent hover:bg-accent/90 text-accent-foreground">
              Secure My Leadership Seat
            </Button>
          </div>
          
          <!-- Scarcity Elements -->
          <div class="space-y-2 text-sm opacity-90">
            <p>• Limited to 12 Upstate SC (Greenville-Spartanburg-Anderson) company leaders per session</p>
            <p>• Founding Member $125 rate ends after first session fills</p>
            <p>• Future sessions will be $297 - lock in your founding rate now</p>
          </div>
          
          <div class="mt-8">
            <Button asChild variant="outline" size="lg" className="border-white/30 text-white hover:bg-white/10">
              <a href="tel:+18647528017">Or Call +1 (864) 752-8017</a>
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="ai-boardroom-faq py-24 bg-muted/30">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center text-foreground">
            AI Boardroom Upstate SC: Frequently Asked Questions About Strategic Planning
          </h2>
          
          <FAQAccordion client:load />
        </div>
      </div>
    </section>

    <!-- Social Proof Section -->
    <section class="ai-boardroom-social-proof py-24">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-foreground">
            Future Success Stories
          </h2>
          
          <Card>
            <CardContent className="p-8">
              <p class="text-lg italic text-muted-foreground mb-6">
                "Coming Soon: Success stories from Upstate tech companies that broke through growth plateaus using AI Boardroom strategies"
              </p>
              
              <div class="grid md:grid-cols-3 gap-6">
                <div class="text-center">
                  <Badge variant="secondary" className="mb-2 badge">Authority Indicator</Badge>
                  <p class="text-sm">Exclusive program for established tech companies</p>
                </div>
