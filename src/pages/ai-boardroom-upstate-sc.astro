<script>
  // AI Boardroom Form Submission Handler
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('ai-boardroom-form');
    const submitBtn = document.getElementById('submit-btn');
    const submitText = document.getElementById('submit-text');
    const loadingText = document.getElementById('loading-text');
    const messageDiv = document.getElementById('form-message');
    
    if (form) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Check honeypot for spam protection
        const honeypot = form.querySelector('input[name="honeypot"]');
        if (honeypot && honeypot.value) {
          return; // Likely spam, do nothing
        }
        
        // Get form data
        const formData = new FormData(form);
        const data = {
          companyName: formData.get('companyName'),
          name: formData.get('name'),
          email: formData.get('email'),
          strategicChallenge: formData.get('strategicChallenge') || ''
        };
        
        // Basic validation
        if (!data.companyName || !data.name || !data.email) {
          showMessage('Please fill in all required fields.', 'error');
          return;
        }
        
        // Email validation
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(data.email)) {
          showMessage('Please enter a valid email address.', 'error');
          return;
        }
        
        // Show loading state
        setLoadingState(true);
        
        try {
          // Send to webhook
          const response = await fetch('https://services.leadconnectorhq.com/hooks/O3A0THtKcMOzi34vEwru/webhook-trigger/m5542gbRcwVmRY8S0Rl2', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
          });
          
          if (response.ok) {
            // Success - show message and redirect
            showMessage('Registration successful! Redirecting to confirmation page...', 'success');
            
            // Redirect after 2 seconds
            setTimeout(() => {
              window.location.href = 'https://links.ctwebdesignshop.com/payment-link/68d57ad067ee3bb601696088';
            }, 2000);
          } else {
            throw new Error('Submission failed');
          }
        } catch (error) {
          console.error('Form submission error:', error);
          showMessage('There was an error submitting your registration. Please try again or call +1 (864) 752-8017.', 'error');
          setLoadingState(false);
        }
      });
    }
    
    function setLoadingState(loading) {
      if (loading) {
        submitBtn.disabled = true;
        submitText.style.display = 'none';
        loadingText.style.display = 'inline';
        submitBtn.classList.add('opacity-75');
      } else {
        submitBtn.disabled = false;
        submitText.style.display = 'inline';
        loadingText.style.display = 'none';
        submitBtn.classList.remove('opacity-75');
      }
    }
    
    function showMessage(message, type) {
      messageDiv.innerHTML = message;
      messageDiv.className = `mt-4 text-center px-4 py-2 rounded-lg ${
        type === 'success' 
          ? 'bg-green-500/20 text-green-100 border border-green-500/30' 
          : 'bg-red-500/20 text-red-100 border border-red-500/30'
      }`;
      messageDiv.style.display = 'block';
      
      // Hide message after 5 seconds for errors
      if (type === 'error') {
        setTimeout(() => {
          messageDiv.style.display = 'none';
        }, 5000);
      }
    }
  });
</script>

