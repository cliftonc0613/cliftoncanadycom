---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { Code, PenTool, Mic, Camera, Phone, ExternalLink } from 'lucide-react';
---

<Layout title="Contact Clifton T. Canady | Let's Work Together">
  <Navigation />
  <main>
    <!-- Hero Section (350px) -->
    <section class="relative min-h-[350px] md:min-h-[400px] flex items-center justify-center text-white overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url('/images/clifton-canady-resume-cv.jpg');"></div>

      <!-- Diagonal Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-br from-primary/85 to-accent/85"></div>

      <!-- Content -->
      <div class="relative z-10 container mx-auto px-4 text-center" style="padding-top: 4em; padding-bottom: 2em;">
        <span class="inline-block text-sm font-semibold letter-spacing-wider text-blue-100 mb-4 uppercase tracking-widest">Let's Connect</span>
        <h1 class="text-5xl md:text-6xl font-bold mb-4 leading-tight">
          Get In Touch
        </h1>
        <p class="text-xl md:text-2xl opacity-90 max-w-3xl mx-auto">
          Direct. Fast. No forms.
        </p>
      </div>
    </section>

    <!-- Contact Methods Section -->
    <section class="relative py-32 bg-gradient-to-br from-blue-50 to-slate-100 overflow-hidden">
      <!-- Decorative elements -->
      <div class="absolute top-0 right-0 w-96 h-96 bg-accent/5 rounded-full -mr-48 -mt-48"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-primary/5 rounded-full -ml-40 -mb-40"></div>

      <div class="container mx-auto px-4 max-w-5xl relative z-10">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Left Side - Text -->
          <div>
            <p class="text-accent font-semibold uppercase tracking-widest text-sm mb-6">Direct Contact</p>
            <h2 class="text-5xl md:text-6xl font-bold text-primary mb-6 leading-tight">
              Ready to<br />
              <span class="relative inline-block">
                get started?
                <svg class="absolute -bottom-2 left-0 w-full h-3" viewBox="0 0 200 20" preserveAspectRatio="none">
                  <path d="M0,10 Q50,0 100,10 T200,10" stroke="#f56e38" stroke-width="3" fill="none" />
                </svg>
              </span>
            </h2>
            <p class="text-gray-700 text-xl mb-8 leading-relaxed">
              Call directly for immediate availability. No automated systems, just straightforward conversation about your project needs.
            </p>

            <!-- Secondary CTA -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="https://cliftoncanady.com" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center gap-3 bg-primary/10 hover:bg-primary/20 text-primary border-2 border-primary hover:border-accent px-8 py-4 rounded-lg font-semibold transition-all duration-300 group">
                <span>Explore Portfolio</span>
                <ExternalLink size={20} className="group-hover:translate-x-1 transition-transform" />
              </a>
              <a href="https://links.ctwebdesignshop.com/widget/bookings/cliftoncanady" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center gap-3 bg-accent hover:bg-accent/90 text-white border-2 border-accent px-8 py-4 rounded-lg font-semibold transition-all duration-300 group">
                <span>Schedule Meeting</span>
              </a>
            </div>
          </div>

          <!-- Right Side - Phone CTA -->
          <div class="relative">
            <!-- Phone number card -->
            <div class="bg-white border-2 border-gray-100 rounded-2xl p-8 md:p-12 text-center shadow-lg hover:shadow-2xl hover:border-accent transition-all duration-300">
              <p class="text-gray-500 text-sm uppercase tracking-widest font-semibold mb-6">Call Anytime</p>

              <a href="tel:+18642522349" class="group block mb-8">
                <div class="flex items-center justify-center gap-4 mb-6">
                  <div class="w-14 h-14 bg-accent/15 rounded-full flex items-center justify-center group-hover:bg-accent/25 transition-all">
                    <Phone size={32} className="text-accent" />
                  </div>
                  <div class="text-left">
                    <p class="text-gray-500 text-xs uppercase tracking-wider">Phone</p>
                    <p class="text-lg md:text-xl font-bold text-primary font-mono group-hover:text-accent transition-colors">
                      1 (864) 252-2349
                    </p>
                  </div>
                </div>
              </a>

              <div class="border-t border-gray-100 pt-6">
                <p class="text-gray-600 text-sm leading-relaxed">
                  Available for consultations & new projects during business hours
                </p>
              </div>
            </div>

            <!-- Accent dot decoration -->
            <div class="absolute -top-6 -right-6 w-16 h-16 bg-accent/20 rounded-full blur-xl"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Schedule Consultation Section -->
    <section class="relative py-20 md:py-28 bg-white overflow-hidden">
      <!-- Subtle background pattern -->
      <div class="absolute inset-0 opacity-[0.02]" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%233D4E76&quot; fill-opacity=&quot;1&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>

      <div class="container mx-auto px-4 max-w-5xl relative z-10">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4" style="font-family: 'Poppins', sans-serif;">
            Schedule Your Free Consultation
          </h2>
          <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
            Book a convenient time to discuss your web design project with our experts
          </p>
        </div>

        <!-- Choose Your Preferred Time Card -->
        <div class="bg-slate-50 border border-slate-200 rounded-xl p-6 md:p-8 mb-8">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-primary mb-2">Choose Your Preferred Time</h3>
              <p class="text-gray-600">
                Select a date and time that works best for you. All consultations are completely free with no obligation.
              </p>
            </div>
          </div>
        </div>

        <!-- Calendar Widget Container -->
        <div class="bg-white border-2 border-slate-100 rounded-2xl shadow-lg overflow-hidden mb-8">
          <div class="p-6 md:p-10 min-h-[500px] flex items-center justify-center">
<!-- Calendar Booking Widget -->
            <div id="calendar-embed" class="w-full">
              <iframe src="https://links.ctwebdesignshop.com/widget/booking/1As3GOHcx1FKpjPx8p0i" style="width: 100%; min-height: 650px; border: none; overflow: hidden;" scrolling="no" id="1As3GOHcx1FKpjPx8p0i_1767456832452"></iframe>
              <script src="https://links.ctwebdesignshop.com/js/form_embed.js" type="text/javascript"></script>
            </div>
          </div>
        </div>

        <!-- What to Expect Card -->
        <div class="bg-slate-50 border border-slate-200 rounded-xl p-6 md:p-8">
          <h4 class="text-lg font-bold text-accent mb-4">What to Expect:</h4>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-5 h-5 bg-accent rounded-full flex items-center justify-center mt-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </span>
              <span class="text-gray-700 text-sm">15-30 minute consultation call</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-5 h-5 bg-accent rounded-full flex items-center justify-center mt-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </span>
              <span class="text-gray-700 text-sm">Discussion of your business goals and needs</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-5 h-5 bg-accent rounded-full flex items-center justify-center mt-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </span>
              <span class="text-gray-700 text-sm">Custom recommendations for your project</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-5 h-5 bg-accent rounded-full flex items-center justify-center mt-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </span>
              <span class="text-gray-700 text-sm">No-obligation project proposal</span>
            </li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Expertise Overview Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4">What I Do</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">Specialized services to elevate your digital presence</p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl hover:scale-105 transition-all duration-300 text-center">
            <div class="flex justify-center mb-4 text-accent">
              <Code size={40} />
            </div>
            <h3 class="text-xl font-bold text-primary mb-3">WordPress Development</h3>
            <p class="text-gray-600">Custom sites, themes, plugins, and e-commerce solutions</p>
          </div>

          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl hover:scale-105 transition-all duration-300 text-center">
            <div class="flex justify-center mb-4 text-accent">
              <PenTool size={40} />
            </div>
            <h3 class="text-xl font-bold text-primary mb-3">Content Writing</h3>
            <p class="text-gray-600">SEO-optimized copy, blog writing, and technical documentation</p>
          </div>

          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl hover:scale-105 transition-all duration-300 text-center">
            <div class="flex justify-center mb-4 text-accent">
              <Mic size={40} />
            </div>
            <h3 class="text-xl font-bold text-primary mb-3">Speaking & Seminars</h3>
            <p class="text-gray-600">Keynotes, workshops, and corporate training programs</p>
          </div>

          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl hover:scale-105 transition-all duration-300 text-center">
            <div class="flex justify-center mb-4 text-accent">
              <Camera size={40} />
            </div>
            <h3 class="text-xl font-bold text-primary mb-3">Photography</h3>
            <p class="text-gray-600">Corporate, events, headshots, and product photography</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Response Time Section -->
    <section class="py-20 bg-gradient-to-br from-primary to-accent text-white">
      <div class="container mx-auto px-4 max-w-2xl">
        <div class="bg-white/10 backdrop-blur border border-white/20 p-12 rounded-lg text-center">
          <h3 class="text-3xl font-bold mb-6">Response Time Guarantee</h3>
          <p class="text-lg opacity-90 leading-relaxed">I typically respond to calls and inquiries within <strong>24 hours</strong> during business days. For urgent matters, mention it when you call.</p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

