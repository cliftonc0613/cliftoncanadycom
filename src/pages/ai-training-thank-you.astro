---
import Layout from '../layouts/Layout.astro';
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import AIBoardroomHeader from '../components/AIBoardroomHeader.astro';
import AIBoardroomFooter from '../components/AIBoardroomFooter.astro';
---

<Layout
  title="Thank You | AI Training - Registration Confirmed"
  description="Thank you for registering for AI Training. Your learning journey begins now."
  ogImage="/images/ai-boardrooms-og.jpg"
  ogImageAlt="AI Training Registration Confirmed"
  noindex={true}
>
  <main>
    <!-- Header Section -->
    <AIBoardroomHeader
      logoSrc="/images/logo/2x/ai-training-course-logo@2x.png"
      logoAlt="AI Training Course"
      logoHeight="h-16"
      ctaText="Book a Call"
      ctaLink="https://links.ctwebdesignshop.com/widget/bookings/clifton-canady"
    />

    <!-- Thank You Hero Section -->
    <section class="ai-boardroom-hero flex items-center justify-center relative text-primary-foreground overflow-hidden py-16">
      <!-- Background Image -->
      <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url('/images/ai-boardroom.jpg');"></div>

      <!-- Glassy Overlay -->
      <div class="absolute inset-0 bg-gradient-to-br from-primary/85 to-primary/80 backdrop-blur-sm"></div>
      <div class="absolute inset-0 bg-white/10 backdrop-blur-[2px]"></div>

      <div class="max-w-4xl mx-auto px-4 py-24 relative z-10 text-center">

        <!-- Success Badge -->
        <div class="inline-flex items-center gap-2 bg-accent/20 backdrop-blur rounded-full px-6 py-3 mb-8">
          <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <span class="text-white font-semibold text-sm uppercase tracking-wide hero-badge-text">Registration Confirmed</span>
        </div>

        <!-- Main Thank You Message -->
        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight text-center">
          Welcome to AI Training!
        </h1>

        <!-- Subheadline -->
        <p class="text-xl md:text-2xl opacity-90 font-semibold mb-8 max-w-3xl mx-auto">
          Thank you for registering. Your AI learning journey begins now.
        </p>

        <!-- Key Benefits -->
        <div class="grid md:grid-cols-3 gap-6 mb-12 max-w-4xl mx-auto">
          <div class="bg-white/10 backdrop-blur rounded-2xl p-6 border border-white/20">
            <div class="w-12 h-12 bg-accent rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <h3 class="text-sm font-bold text-white mb-2 icon-box-header">Expert Training</h3>
            <p class="text-white/80 text-sm icon-box-text">Learn AI techniques from experienced practitioners</p>
          </div>

          <div class="bg-white/10 backdrop-blur rounded-2xl p-6 border border-white/20">
            <div class="w-12 h-12 bg-primary rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-sm font-bold text-white mb-2 icon-box-header">Practical Skills</h3>
            <p class="text-white/80 text-sm icon-box-text">Hands-on training with real-world applications</p>
          </div>

          <div class="bg-white/10 backdrop-blur rounded-2xl p-6 border border-white/20">
            <div class="w-12 h-12 bg-accent rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-sm font-bold text-white mb-2 icon-box-header">Community</h3>
            <p class="text-white/80 text-sm icon-box-text">Connect with other AI learners and practitioners</p>
          </div>
        </div>

      </div>
    </section>

    <!-- What Happens Next Section -->
    <section class="py-24 bg-gradient-to-br from-slate-50 via-white to-blue-50/30">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-primary">
            What Happens Next?
          </h2>
          <p class="text-lg text-gray-600 mb-12 max-w-2xl mx-auto">
            Here's what you can expect as you begin your AI training journey.
          </p>

          <!-- Timeline Steps -->
          <div class="grid md:grid-cols-3 gap-8">
            <!-- Step 1 -->
            <div class="relative">
              <div class="bg-white rounded-2xl p-8 shadow-xl border border-gray-100 h-full">
                <div class="w-16 h-16 bg-gradient-to-br from-primary to-primary/80 rounded-xl flex items-center justify-center mx-auto mb-6">
                  <span class="text-2xl font-bold text-white">1</span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-4 icon-box-header">Confirmation Email</h3>
                <p class="text-gray-600 icon-box-text">You'll receive a confirmation email with training details and access information.</p>
              </div>
            </div>

            <!-- Step 2 -->
            <div class="relative">
              <div class="bg-white rounded-2xl p-8 shadow-xl border border-gray-100 h-full">
                <div class="w-16 h-16 bg-gradient-to-br from-accent to-orange-600 rounded-xl flex items-center justify-center mx-auto mb-6">
                  <span class="text-2xl font-bold text-white">2</span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-4 icon-box-header">Access Training Materials</h3>
                <p class="text-gray-600 icon-box-text">Get instant access to training resources and preparation materials.</p>
              </div>
            </div>

            <!-- Step 3 -->
            <div class="relative">
              <div class="bg-white rounded-2xl p-8 shadow-xl border border-gray-100 h-full">
                <div class="w-16 h-16 bg-gradient-to-br from-primary to-primary/80 rounded-xl flex items-center justify-center mx-auto mb-6">
                  <span class="text-2xl font-bold text-white">3</span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-4 icon-box-header">Start Learning</h3>
                <p class="text-gray-600 icon-box-text">Begin your training and start applying AI techniques to your work.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Training Details Section -->
    <section class="py-24 bg-muted/30">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center text-primary">
            Training Information
          </h2>

          <div class="grid md:grid-cols-2 gap-8">
            <!-- What's Included Card -->
            <Card>
              <CardContent className="p-8">
                <h3 class="text-xl font-bold text-primary mb-6">What's Included</h3>
                <div class="space-y-4">
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></div>
                    <div>
                      Comprehensive AI training materials
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></div>
                    <div>
                      Hands-on practical exercises
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></div>
                    <div>
                      Expert guidance and support
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></div>
                    <div>
                      Certificate of completion
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></div>
                    <div>
                      Ongoing community access
                    </div>
                  </div>
                </div>
              </CardContent>
            </Card>

            <!-- Need Help Card -->
            <Card>
              <CardContent className="p-8">
                <h3 class="text-xl font-bold text-primary mb-6">Need Help?</h3>
                <div class="space-y-4">
                  <p class="text-gray-600">
                    If you have any questions about your training or need assistance, we're here to help.
                  </p>
                  <div class="pt-4">
                    <Button asChild variant="default" size="lg" className="w-full">
                      <a href="tel:+18647528017">Call +1 (864) 752-8017</a>
                    </Button>
                  </div>
                  <div>
                    <Button asChild variant="outline" size="lg" className="w-full">
                      <a href="https://links.ctwebdesignshop.com/widget/bookings/clifton-canady">Schedule a Call</a>
                    </Button>
                  </div>
                </div>
              </CardContent>
            </Card>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <AIBoardroomFooter
      logoSrc="/images/logo/2x/ai-training-course-logo@2x.png"
      logoAlt="AI Training Course"
    />
  </main>
</Layout>

<style>
  /* Responsive Font System using calc() */
  html {
    font-size: calc(14px + (20 - 14) * ((100vw - 320px) / (1920 - 320)));
  }

  h1 {
    font-size: calc(1.5rem + 2.5vw);
    line-height: calc(1.2 + 0.2vw);
  }

  h2 {
    font-size: calc(1.25rem + 1.5vw);
    line-height: calc(1.3 + 0.15vw);
  }

  h3 {
    font-size: calc(1rem + 1vw);
    line-height: calc(1.4 + 0.1vw);
  }

  h4, h5, h6 {
    font-size: calc(0.875rem + 0.5vw);
    line-height: calc(1.5 + 0.05vw);
  }

  p, span, div {
    font-size: calc(0.875rem + 0.25vw);
    line-height: calc(1.5 + 0.1vw);
  }

  /* Icon box header text override - desktop only */
  @media (min-width: 768px) {
    .icon-box-header {
      font-size: 1em !important;
    }
  }

  /* Icon box paragraph text override */
  .icon-box-text {
    font-size: 16px !important;
    font-family: 'Poppins', sans-serif !important;
  }

  /* Hero badge text override */
  .hero-badge-text {
    font-size: 16px !important;
  }

  /* Hero height overrides */
  .ai-boardroom-hero {
    min-height: 100vh;
  }

  @media (min-width: 768px) {
    .ai-boardroom-hero {
      height: 78vh !important;
      min-height: auto;
    }
  }
</style>
