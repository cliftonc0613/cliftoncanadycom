<script>
  // Animate skill bars when they come into view
  document.addEventListener('DOMContentLoaded', function() {
    
    // Function to animate a single skill
    function animateSkill(skillBar, skillPercentage, delay = 0) {
      setTimeout(() => {
        // Animate progress bar
        const targetWidth = skillBar.getAttribute('data-width');
        skillBar.style.width = targetWidth + '%';
        
        // Animate percentage counter
        const target = parseInt(skillPercentage.getAttribute('data-target'));
        animateCounter(skillPercentage, 0, target, 1000);
      }, delay);
    }
    
    // Counter animation function
    function animateCounter(element, start, end, duration) {
      const range = end - start;
      const startTime = Date.now();
      
      function updateCounter() {
        const elapsed = Date.now() - startTime;
        const progress = Math.min(elapsed / duration, 1);
        
        // Easing function for smooth animation
        const easeOut = 1 - Math.pow(1 - progress, 3);
        const current = Math.round(start + (range * easeOut));
        
        element.textContent = current + '%';
        
        if (progress < 1) {
          requestAnimationFrame(updateCounter);
        }
      }
      
      updateCounter();
    }
    
    // Set up intersection observer
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Get all skill elements
          const skillBars = document.querySelectorAll('.skill-bar');
          const skillPercentages = document.querySelectorAll('.skill-percentage');
          
          // Animate each skill with staggered timing
          skillBars.forEach((bar, index) => {
            const percentage = skillPercentages[index];
            animateSkill(bar, percentage, index * 200);
          });
          
          // Stop observing once animation is triggered
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.3
    });
    
    // Start observing the skills container
    const skillsContainer = document.getElementById('skills-container');
    if (skillsContainer) {
      observer.observe(skillsContainer);
    }
  });
</script>