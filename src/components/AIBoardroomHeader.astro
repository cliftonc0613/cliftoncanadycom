---
export interface Props {
  logoSrc?: string;
  logoAlt?: string;
  logoHeight?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  logoSrc = "/images/logo/SVG/AI-bordroom-logo.svg",
  logoAlt = "AI Boardroom Upstate SC - Strategic Advisory for Tech Company Leaders",
  logoHeight = "h-12",
  ctaText = "Reserve Your Seat",
  ctaLink = "#reserve"
} = Astro.props;

// Check if the link should open in a new tab
const isExternalBookingLink = ctaLink?.includes('links.ctwebdesignshop.com/widget/bookings/clifton-canady');
---

<header class="ai-boardroom-header bg-white shadow-sm">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-center md:justify-between py-4">
      <!-- Logo -->
      <div class="flex items-center">
        <img
          src={logoSrc}
          alt={logoAlt}
          class={`${logoHeight} w-auto`}
        >
      </div>

      <!-- Call to Action Button -->
      <div class="hidden md:block">
        {isExternalBookingLink ? (
          <a
            href={ctaLink}
            target="_blank"
            rel="noopener noreferrer"
            class="orange-btn inline-flex items-center justify-center px-6 py-3 font-semibold rounded-md shadow-lg transform hover:scale-105 transition-all duration-200"
          >
            {ctaText}
          </a>
        ) : (
          <a
            href={ctaLink}
            class="orange-btn inline-flex items-center justify-center px-6 py-3 font-semibold rounded-md shadow-lg transform hover:scale-105 transition-all duration-200"
          >
            {ctaText}
          </a>
        )}
      </div>
    </div>
  </div>
</header>

<style>
  /* Orange button styling */
  .orange-btn {
    background-color: #F66733 !important;
    border: 2px solid #F66733 !important;
    color: white !important;
    text-decoration: none;
    font-family: 'Poppins', sans-serif;
  }
  
  .orange-btn:hover {
    background-color: #e55a2d !important;
    border: 2px solid #e55a2d !important;
    color: white !important;
  }
</style>