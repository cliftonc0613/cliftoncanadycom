---
import { Zap, ArrowRight, Star } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  category: string;
  slug: string;
  image?: { url: string; alt: string };
  featured?: boolean;
}

const { title, description, pubDate, category, slug, image, featured } = Astro.props;

// Format date
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  });
}

// Category colors with vibrant palette
const categoryColors: Record<string, { bg: string; text: string; accent: string }> = {
  'WordPress Development': { bg: 'from-blue-50 to-blue-100', text: 'text-blue-900', accent: 'bg-blue-500' },
  'Content Writing': { bg: 'from-green-50 to-green-100', text: 'text-green-900', accent: 'bg-green-500' },
  'AI Training': { bg: 'from-purple-50 to-purple-100', text: 'text-purple-900', accent: 'bg-purple-500' },
  'Speaking': { bg: 'from-orange-50 to-orange-100', text: 'text-orange-900', accent: 'bg-orange-500' },
  'Photography': { bg: 'from-pink-50 to-pink-100', text: 'text-pink-900', accent: 'bg-pink-500' },
  'General': { bg: 'from-gray-50 to-gray-100', text: 'text-gray-900', accent: 'bg-gray-500' }
};

function getCategoryColor(cat: string) {
  return categoryColors[cat] || categoryColors['General'];
}

const colors = getCategoryColor(category);
---

<article class={`group relative h-full rounded-2xl overflow-hidden transition-all duration-500 hover:shadow-2xl hover:-translate-y-2 ${featured ? 'md:col-span-2' : ''}`}>
  <!-- Background gradient that animates on hover -->
  <div class="absolute inset-0 bg-gradient-to-br from-white via-gray-50 to-gray-100 opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10"></div>

  <!-- Card link wrapper -->
  <a href={`/blog/${slug}`} class="relative h-full block">
    <!-- Card container with border -->
    <div class="relative h-full bg-white rounded-2xl border border-gray-200 overflow-hidden shadow-lg group-hover:shadow-2xl transition-shadow duration-500">

    <!-- Image Section with diagonal frame -->
    {image && (
      <div class="relative h-64 md:h-80 overflow-hidden bg-gray-100">
        <!-- Diagonal overlay effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-black/0 via-black/0 to-black/10 z-10 group-hover:to-black/20 transition-all duration-500"></div>

        <!-- Image with zoom effect -->
        <img
          src={image.url}
          alt={image.alt}
          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 ease-out"
        />

        <!-- Floating metadata overlay (top-right) -->
        <div class="absolute top-4 right-4 z-20 flex items-center gap-2 bg-white/95 backdrop-blur-md px-3 py-2 rounded-full shadow-lg group-hover:shadow-xl transition-all duration-300">
          <Zap class="w-2 h-2" style={{color: '#F59E0B', fill: '#F59E0B'}} />
          <span class="text-xs font-bold text-gray-900 font-[Poppins]">Quick Read</span>
        </div>
      </div>
    )}

    <!-- Content section -->
    <div class="p-6 md:p-8 flex flex-col h-full relative z-5">

      <!-- Category badge with vibrant styling -->
      <div class="mb-4 flex items-center gap-2">
        <div class={`${colors.accent} w-2 h-2 rounded-full`}></div>
        <span class={`text-xs font-black uppercase tracking-widest ${colors.text} font-[Poppins]`}>
          {category}
        </span>
      </div>

      <!-- Title with gradient text effect -->
      <h3 class={`text-2xl md:text-3xl font-black font-[Poppins] mb-3 leading-tight group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-blue-600 group-hover:to-orange-500 transition-all duration-500 ${featured ? 'line-clamp-3' : 'line-clamp-2'}`}>
        {title}
      </h3>

      <!-- Description -->
      <p class={`text-gray-600 font-[Roboto_Mono] leading-relaxed mb-6 flex-grow ${featured ? 'line-clamp-3' : 'line-clamp-2'}`}>
        {description}
      </p>

      <!-- Footer section with date, read time, and CTA -->
      <div class="flex items-center justify-between pt-4 border-t-2 border-gray-100 group-hover:border-gray-200 transition-colors duration-300">
        <div class="flex items-center gap-4">
          <time class="text-xs font-semibold text-gray-500 uppercase tracking-wide font-[Poppins]">
            {formatDate(pubDate)}
          </time>
          {/* Read time indicator */}
          <div class="flex items-center gap-1 px-2.5 py-1 bg-gradient-to-r from-orange-50 to-orange-100 rounded-full">
            <span class="w-1.5 h-1.5 bg-orange-500 rounded-full animate-pulse"></span>
            <span class="text-xs font-bold text-orange-700 font-[Poppins]">5 min</span>
          </div>
        </div>

        <!-- Read more button with arrow animation -->
        <button
          class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-bold text-sm rounded-lg transition-all duration-300 group/link hover:shadow-lg cursor-pointer"
        >
          <span class="font-[Poppins]">Read</span>
          <ArrowRight class="w-4 h-4 group-hover/link:translate-x-1 transition-transform duration-300" />
        </button>
      </div>
    </div>

    <!-- Featured badge (if featured) -->
    {featured && (
      <div class="absolute top-0 left-0 px-4 py-2 bg-gradient-to-r from-orange-500 to-orange-600 text-white text-xs font-black uppercase tracking-widest rounded-br-lg shadow-lg font-[Poppins] flex items-center gap-1">
        <Star class="w-3 h-3 fill-current" />
        Featured
      </div>
    )}
    </div>
  </a>
</article>

<style>
  @keyframes shimmer {
    0% {
      background-position: -1000px 0;
    }
    100% {
      background-position: 1000px 0;
    }
  }

  /* Subtle shimmer effect on hover */
  article:hover {
    animation: shimmer 2s infinite;
  }
</style>
