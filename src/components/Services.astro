---
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
---

<section id="services" class="py-24 bg-muted/30">
  <div class="container mx-auto px-4">
    <div class="section-content text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-foreground">
        Professional Services
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Comprehensive digital solutions to help your business succeed across all channels.
      </p>
    </div>
    
    <div class="card-group grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
      
      <!-- WordPress Development -->
      <Card className="h-full group hover:shadow-lg transition-shadow">
        <CardHeader className="text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
            </svg>
          </div>
          <CardTitle className="text-xl">WordPress Development</CardTitle>
        </CardHeader>
        <CardContent className="text-center">
          <ul class="text-muted-foreground space-y-2 mb-6">
            <li>• Custom website development</li>
            <li>• Theme customization</li>
            <li>• Plugin development</li>
            <li>• E-commerce solutions</li>
            <li>• Performance optimization</li>
            <li>• Maintenance & security</li>
          </ul>
          <Button variant="outline" className="w-full animated-button">
            Learn More
          </Button>
        </CardContent>
      </Card>
      
      <!-- Content Writing -->
      <Card className="h-full group hover:shadow-lg transition-shadow">
        <CardHeader className="text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
            </svg>
          </div>
          <CardTitle className="text-xl">Content Writing</CardTitle>
        </CardHeader>
        <CardContent className="text-center">
          <ul class="text-muted-foreground space-y-2 mb-6">
            <li>• Website copy & strategy</li>
            <li>• Blog writing</li>
            <li>• Technical documentation</li>
            <li>• SEO-optimized content</li>
            <li>• Social media content</li>
            <li>• Email campaigns</li>
          </ul>
          <Button variant="outline" className="w-full animated-button">
            Learn More
          </Button>
        </CardContent>
      </Card>
      
      <!-- Speaking & Seminars -->
      <Card className="h-full group hover:shadow-lg transition-shadow">
        <CardHeader className="text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
            </svg>
          </div>
          <CardTitle className="text-xl">Speaking & Seminars</CardTitle>
        </CardHeader>
        <CardContent className="text-center">
          <ul class="text-muted-foreground space-y-2 mb-6">
            <li>• Conference presentations</li>
            <li>• Workshop facilitation</li>
            <li>• Corporate training</li>
            <li>• Technical sessions</li>
            <li>• Keynote speeches</li>
            <li>• Custom presentations</li>
          </ul>
          <Button variant="outline" className="w-full animated-button">
            Learn More
          </Button>
        </CardContent>
      </Card>
      
      <!-- Photography -->
      <Card className="h-full group hover:shadow-lg transition-shadow">
        <CardHeader className="text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9zM15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <CardTitle className="text-xl">Photography</CardTitle>
        </CardHeader>
        <CardContent className="text-center">
          <ul class="text-muted-foreground space-y-2 mb-6">
            <li>• Corporate photography</li>
            <li>• Event documentation</li>
            <li>• Professional headshots</li>
            <li>• Product photography</li>
            <li>• Marketing imagery</li>
            <li>• Photo editing</li>
          </ul>
          <Button variant="outline" className="w-full animated-button">
            Learn More
          </Button>
        </CardContent>
      </Card>
      
    </div>
    
    <!-- Call to Action -->
    <div class="text-center mt-16">
      <h3 class="text-2xl font-semibold mb-4 text-foreground">
        Ready to Transform Your Digital Presence?
      </h3>
      <p class="text-muted-foreground mb-8 max-w-2xl mx-auto">
        Let's discuss how my expertise can help your business achieve its goals with professional digital solutions.
      </p>
      <Button asChild size="lg" className="animated-button bg-primary hover:bg-primary/90">
        <a href="#contact">Get Started Today</a>
      </Button>
    </div>
  </div>
</section>