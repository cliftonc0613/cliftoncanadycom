---
import { Button } from "@/components/ui/button";
---

<footer class="bg-primary text-primary-foreground py-16">
  <div class="container mx-auto px-4">
    <div class="text-center">
      <div class="mb-8">
        <img src="/images/ctc-logo.png" alt="Clifton T. Canady" class="h-16 w-auto mx-auto mb-6 opacity-80">
      </div>
      
      <p class="text-primary-foreground/80 mb-8 text-lg max-w-2xl mx-auto">
        Creating digital experiences that connect, engage, and inspire. Let's bring your vision to life.
      </p>
      
      <div class="flex flex-wrap justify-center gap-8 text-primary-foreground/80 mb-12">
        <Button asChild variant="link" className="text-primary-foreground/80 hover:text-primary-foreground transition-colors p-0 h-auto">
          <a href="mailto:hello@cliftoncanady.com" style="font-family: 'Poppins', sans-serif;">
            hello@cliftoncanady.com
          </a>
        </Button>
        <Button asChild variant="link" className="text-primary-foreground/80 hover:text-accent transition-colors p-0 h-auto">
          <a href="https://facebook.com/cliftonc" target="_blank" rel="noopener noreferrer" style="font-family: 'Poppins', sans-serif;">
            Facebook
          </a>
        </Button>
        <Button asChild variant="link" className="text-primary-foreground/80 hover:text-accent transition-colors p-0 h-auto">
          <a href="https://linkedin.com/in/cliftoncanady" target="_blank" rel="noopener noreferrer" style="font-family: 'Poppins', sans-serif;">
            LinkedIn
          </a>
        </Button>
        <Button asChild variant="link" className="text-primary-foreground/80 hover:text-accent transition-colors p-0 h-auto">
          <a href="https://links.ctwebdesignshop.com/widget/bookings/cliftoncanady" target="_blank" rel="noopener noreferrer" style="font-family: 'Poppins', sans-serif;">
            Schedule Meeting
          </a>
        </Button>
        <Button asChild variant="link" className="text-primary-foreground/80 hover:text-accent transition-colors p-0 h-auto">
          <a href="/ai-training-youth-lp" style="font-family: 'Poppins', sans-serif;">
            AI Training Course
          </a>
        </Button>
        <Button asChild className="ai-boardroom-btn bg-white hover:bg-gray-100 text-accent px-4 py-2 rounded font-semibold transition-all duration-200 transform hover:scale-105">
          <a href="/ai-boardroom-upstate-sc" style="font-family: 'Poppins', sans-serif;" class="inline-flex items-center gap-2">
            AI Boardroom Seminar
          </a>
        </Button>
      </div>
      
      <div class="border-t border-primary-foreground/20 pt-8">
        <p class="text-sm text-primary-foreground/60">
          Â© {new Date().getFullYear()} Clifton T. Canady. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  /* AI Boardroom button pulse animation */
  .ai-boardroom-btn {
    animation: pulse-glow 2s infinite;
  }
  
  @keyframes pulse-glow {
    0% {
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(255, 255, 255, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
    }
  }
  
  .ai-boardroom-btn:hover {
    animation: none;
  }
</style>

