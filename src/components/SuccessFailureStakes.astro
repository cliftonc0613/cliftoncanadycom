---
export interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Success and Failure Stakes",
  subtitle = "The choice is yours: transform your decision-making or stay stuck in the old way"
} = Astro.props;
---

<section class="success-failure-stakes py-24 bg-gradient-to-br from-slate-50 via-white to-blue-50/30 relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-20 left-10 w-72 h-72 bg-primary rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-accent rounded-full blur-3xl"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-7xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-20">
        <h2 class="text-5xl md:text-6xl font-bold mb-6 text-primary">
          {title}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          {subtitle}
        </p>
      </div>
      
      <!-- Success and Failure Cards -->
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 lg:items-stretch">
        <!-- Success Card -->
        <div class="group relative flex">
          <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 flex flex-col w-full">
            <!-- Success Icon -->
            <div class="relative mb-8">
              <div class="w-24 h-24 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto shadow-lg">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            
            <div class="text-center mb-6">
              <h3 class="text-3xl font-bold text-primary mb-4">What Success Looks Like</h3>
            </div>
            
            <div class="space-y-4">
              <div class="flex items-start gap-4 p-3 bg-green-50 rounded-xl">
                <div class="w-2 h-2 bg-green-500 rounded-full flex-shrink-0 mt-2"></div>
                <span class="text-gray-700 font-medium">Cut your strategic decision time by 90% (like I did)</span>
              </div>
              <div class="flex items-start gap-4 p-3 bg-green-50 rounded-xl">
                <div class="w-2 h-2 bg-green-500 rounded-full flex-shrink-0 mt-2"></div>
                <span class="text-gray-700 font-medium">Save 25-40 hours per month on complex choices</span>
              </div>
              <div class="flex items-start gap-4 p-3 bg-green-50 rounded-xl">
                <div class="w-2 h-2 bg-green-500 rounded-full flex-shrink-0 mt-2"></div>
                <span class="text-gray-700 font-medium">Eliminate expensive consultant fees for routine strategic guidance</span>
              </div>
              <div class="flex items-start gap-4 p-3 bg-green-50 rounded-xl">
                <div class="w-2 h-2 bg-green-500 rounded-full flex-shrink-0 mt-2"></div>
                <span class="text-gray-700 font-medium">Never feel stuck on important decisions again</span>
              </div>
              <div class="flex items-start gap-4 p-3 bg-green-50 rounded-xl">
                <div class="w-2 h-2 bg-green-500 rounded-full flex-shrink-0 mt-2"></div>
                <span class="text-gray-700 font-medium">Join the first group mastering this breakthrough method</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Failure Card -->
        <div class="group relative flex">
          <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 flex flex-col w-full">
            <!-- Failure Icon -->
            <div class="relative mb-8">
              <div class="w-24 h-24 bg-gradient-to-br from-red-500 to-red-600 rounded-2xl flex items-center justify-center mx-auto shadow-lg">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            
            <div class="text-center mb-6">
              <h3 class="text-3xl font-bold text-primary mb-4">What Failure Costs</h3>
            </div>
            
            <div class="space-y-4">
              <div class="flex items-start gap-4 p-3 bg-red-50 rounded-xl">
                <div class="w-2 h-2 bg-red-500 rounded-full flex-shrink-0 mt-2"></div>
                <span class="text-gray-700 font-medium">Continue wasting 30+ hours monthly on decisions you could solve in minutes</span>
              </div>
              <div class="flex items-start gap-4 p-3 bg-red-50 rounded-xl">
                <div class="w-2 h-2 bg-red-500 rounded-full flex-shrink-0 mt-2"></div>
                <span class="text-gray-700 font-medium">Keep paying thousands for consultant advice you could get instantly</span>
              </div>
              <div class="flex items-start gap-4 p-3 bg-red-50 rounded-xl">
                <div class="w-2 h-2 bg-red-500 rounded-full flex-shrink-0 mt-2"></div>
                <span class="text-gray-700 font-medium">Miss opportunities while stuck in analysis paralysis</span>
              </div>
              <div class="flex items-start gap-4 p-3 bg-red-50 rounded-xl">
                <div class="w-2 h-2 bg-red-500 rounded-full flex-shrink-0 mt-2"></div>
                <span class="text-gray-700 font-medium">Watch other professionals get ahead with better strategic thinking</span>
              </div>
              <div class="flex items-start gap-4 p-3 bg-red-50 rounded-xl">
                <div class="w-2 h-2 bg-red-500 rounded-full flex-shrink-0 mt-2"></div>
                <span class="text-gray-700 font-medium">Stay trapped in the old way of making decisions alone</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Make all headings primary blue */
  h1, h2, h3, h4, h5, h6 {
    color: hsl(var(--primary)) !important;
  }
</style>