---
interface Props {
  url: string;
  title: string;
}

const { url, title } = Astro.props;

// Encode URL and title for sharing
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);

// Generate share URLs
const shareUrls = {
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
  twitter: `https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
  email: `mailto:?subject=${encodedTitle}&body=${encodedUrl}`
};
---

<div class="flex items-center justify-center gap-3 md:gap-4 py-6">
  <!-- LinkedIn -->
  <a
    href={shareUrls.linkedin}
    target="_blank"
    rel="noopener noreferrer"
    title="Share on LinkedIn"
    class="group relative w-12 h-12 md:w-14 md:h-14 flex items-center justify-center bg-gradient-to-br from-blue-50 to-blue-100 hover:from-blue-100 hover:to-blue-200 border-2 border-blue-200 hover:border-blue-400 rounded-full transition-all duration-200 transform hover:scale-110 shadow-md hover:shadow-lg"
  >
    <svg class="w-6 h-6 text-blue-700" fill="currentColor" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
    </svg>
    <span class="absolute -top-10 bg-gray-800 text-white text-xs font-[Poppins] px-2 py-1 rounded whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity duration-200">LinkedIn</span>
  </a>

  <!-- Twitter/X -->
  <a
    href={shareUrls.twitter}
    target="_blank"
    rel="noopener noreferrer"
    title="Share on Twitter"
    class="group relative w-12 h-12 md:w-14 md:h-14 flex items-center justify-center bg-gradient-to-br from-slate-50 to-slate-100 hover:from-slate-100 hover:to-slate-200 border-2 border-slate-200 hover:border-slate-400 rounded-full transition-all duration-200 transform hover:scale-110 shadow-md hover:shadow-lg"
  >
    <svg class="w-6 h-6 text-slate-700" fill="currentColor" viewBox="0 0 24 24">
      <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"></path>
    </svg>
    <span class="absolute -top-10 bg-gray-800 text-white text-xs font-[Poppins] px-2 py-1 rounded whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity duration-200">Twitter</span>
  </a>

  <!-- Facebook -->
  <a
    href={shareUrls.facebook}
    target="_blank"
    rel="noopener noreferrer"
    title="Share on Facebook"
    class="group relative w-12 h-12 md:w-14 md:h-14 flex items-center justify-center bg-gradient-to-br from-blue-50 to-blue-100 hover:from-blue-100 hover:to-blue-200 border-2 border-blue-200 hover:border-blue-400 rounded-full transition-all duration-200 transform hover:scale-110 shadow-md hover:shadow-lg"
  >
    <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>
    </svg>
    <span class="absolute -top-10 bg-gray-800 text-white text-xs font-[Poppins] px-2 py-1 rounded whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity duration-200">Facebook</span>
  </a>

  <!-- Email -->
  <a
    href={shareUrls.email}
    title="Share via Email"
    class="group relative w-12 h-12 md:w-14 md:h-14 flex items-center justify-center bg-gradient-to-br from-orange-50 to-orange-100 hover:from-orange-100 hover:to-orange-200 border-2 border-orange-200 hover:border-orange-400 rounded-full transition-all duration-200 transform hover:scale-110 shadow-md hover:shadow-lg"
  >
    <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
    </svg>
    <span class="absolute -top-10 bg-gray-800 text-white text-xs font-[Poppins] px-2 py-1 rounded whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity duration-200">Email</span>
  </a>

  <!-- Copy Link -->
  <button
    id="copy-link-btn"
    type="button"
    title="Copy link to clipboard"
    class="group relative w-12 h-12 md:w-14 md:h-14 flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 hover:from-gray-100 hover:to-gray-200 border-2 border-gray-200 hover:border-gray-400 rounded-full transition-all duration-200 transform hover:scale-110 shadow-md hover:shadow-lg"
  >
    <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.658 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
    </svg>
    <span class="absolute -top-10 bg-gray-800 text-white text-xs font-[Poppins] px-2 py-1 rounded whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity duration-200" id="copy-tooltip">Copy link</span>
  </button>
</div>

<script>
  const copyBtn = document.getElementById('copy-link-btn') as HTMLButtonElement;
  const tooltip = document.getElementById('copy-tooltip') as HTMLElement;

  if (copyBtn) {
    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText('{url}');
        tooltip.textContent = 'Copied!';
        setTimeout(() => {
          tooltip.textContent = 'Copy link';
        }, 2000);
      } catch (err) {
        tooltip.textContent = 'Failed to copy';
      }
    });
  }
</script>
