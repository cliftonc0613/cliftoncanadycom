---
// ServicesNew component - full width service showcase
---

<section class="w-full">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 md:h-[500px]">
    
    <!-- Web Developer Section -->
    <div class="relative overflow-hidden group h-[400px] md:h-auto">
      <!-- Background Image -->
      <div class="absolute inset-0 bg-cover bg-center bg-no-repeat transition-transform duration-700 group-hover:scale-110" 
           style="background-image: url('/web-developer-code.jpg');">
      </div>
      
      <!-- Blue Overlay -->
      <div class="absolute inset-0 transition-opacity duration-300 group-hover:bg-blue-900/80" style="background-color: rgba(61, 78, 118, 0.6);"></div>
      
      <!-- Content -->
      <div class="relative h-full flex flex-col justify-end items-start p-8 text-white">
        <span class="text-sm uppercase tracking-wider font-medium mb-4 opacity-90" style="font-family: 'Roboto Mono', monospace;">
          Web Developer
        </span>
        <h3 class="text-3xl md:text-4xl font-bold leading-tight" style="font-family: 'Poppins', sans-serif;">
          Code That Powers<br>the World.
        </h3>
      </div>
    </div>
    
