<script>
  // Mobile menu functionality
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileMenuClose = document.getElementById('mobile-menu-close');
    const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
    const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link');
    
    function openMenu() {
      mobileMenu?.classList.add('menu-open');
      document.body.style.overflow = 'hidden';
    }
    
    function closeMenu() {
      mobileMenu?.classList.remove('menu-open');
      document.body.style.overflow = '';
    }
    
    mobileMenuButton?.addEventListener('click', openMenu);
    mobileMenuClose?.addEventListener('click', closeMenu);
    mobileMenuBackdrop?.addEventListener('click', closeMenu);
    
    // Close menu when clicking on a link
    mobileMenuLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });
    
    // Add scroll detection for navigation background
    window.addEventListener('scroll', () => {
      const header = document.querySelector('#navigation');
      if (header) {
        if (window.scrollY > 50) {
          header.classList.add('headroom--not-top');
        } else {
          header.classList.remove('headroom--not-top');
        }
      }
    });
  });
</script>

<style>
  /* Headroom animations */
  .headroom {
    will-change: transform;
    transition: transform 200ms linear, background-color 200ms ease;
  }
  .headroom--pinned {
    transform: translateY(0%);
  }
  .headroom--unpinned {
    transform: translateY(-100%);
  }
  
  /* Navigation background on scroll */
  .headroom--not-top {
    background-color: #3D4E76;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  /* Logo shrink on scroll */
  .headroom--not-top #nav-logo {
    height: 2.5rem; /* 40px, smaller than h-16 = 64px */
  }
  
  .headroom--not-top .nav-link {
    color: white;
  }
  
  .headroom--not-top .nav-link:hover {
    color: #F66733;
  }
  
  .headroom--not-top #mobile-menu-button {
    color: white;
  }
  
  .headroom--not-top #mobile-menu-button:hover {
    color: #F66733;
  }
  
  /* Navigation link styles */
  .nav-link, .mobile-menu-link {
    font-family: 'Roboto Mono', monospace;
    text-transform: uppercase;
  }
  
  /* Mobile menu animations */
  #mobile-menu.menu-open {
    opacity: 1;
    pointer-events: auto;
  }
  
  #mobile-menu.menu-open .mobile-menu-panel {
    transform: translateX(0);
  }
  
  /* Ensure mobile menu takes full height */
  .mobile-menu-panel {
    height: 100vh !important;
    height: 100dvh !important; /* Dynamic viewport height for mobile */
    min-height: 100vh !important;
    min-height: 100dvh !important;
    min-height: -webkit-fill-available !important;
  }
  
  /* Ensure backdrop takes full height */
  #mobile-menu-backdrop {
    height: 100vh;
  }
  
  /* Active navigation link styles */
  .nav-link.active {
    color: hsl(var(--primary));
  }
  
  /* AI Boardroom button pulse animation */
  .ai-boardroom-btn {
    animation: pulse-glow 2s infinite;
  }
  
  @keyframes pulse-glow {
    0% {
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(255, 255, 255, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
    }
  }
  
  /* Mobile button specific pulse animation */
  .ai-boardroom-btn-mobile {
    animation: pulse-glow-orange 2s infinite;
  }
  
  @keyframes pulse-glow-orange {
    0% {
      box-shadow: 0 0 0 0 rgba(246, 103, 51, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(246, 103, 51, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(246, 103, 51, 0);
    }
  }
  
  .ai-boardroom-btn:hover,
  .ai-boardroom-btn-mobile:hover {
    animation: none;
  }

  /* AI Training button pulse animation (orange) */
  .ai-training-btn {
    animation: pulse-glow-orange 2s infinite;
  }

  .ai-training-btn:hover,
  .ai-training-btn-mobile:hover {
    animation: none;
  }
</style>