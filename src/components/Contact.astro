---
import { Button } from "@/components/ui/button";
---

<section id="contact" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- Social Links -->
      <div class="flex flex-row gap-6 justify-center items-center mb-16">
        
        <!-- Facebook -->
        <a href="https://facebook.com/cliftoncanady" target="_blank" rel="noopener noreferrer" 
           class="group flex items-center justify-center w-16 h-16 bg-primary hover:bg-primary/90 text-primary-foreground rounded-full transition-all duration-300 hover:scale-110 shadow-lg hover:shadow-xl">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
        
        <!-- LinkedIn -->
        <a href="https://linkedin.com/in/cliftoncanady" target="_blank" rel="noopener noreferrer"
           class="group flex items-center justify-center w-16 h-16 bg-accent hover:bg-accent/90 text-accent-foreground rounded-full transition-all duration-300 hover:scale-110 shadow-lg hover:shadow-xl">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        
      </div>
      
      <!-- Contact Information -->
      <div class="text-center">
        <p class="text-lg text-gray-700 mb-4">
          Ready to collaborate? Let's connect and bring your vision to life.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a href="mailto:hello@ctwebdesignshop.com" class="contact-blue-btn text-base px-6 py-2 font-semibold shadow-lg transform hover:scale-105 transition-all duration-200 inline-flex items-center gap-2 text-center" style="font-family: 'Poppins', sans-serif;">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26c.3.16.67.16.97 0L19 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Email Me
          </a>
          
          <a href="https://links.ctwebdesignshop.com/widget/bookings/clifton-canady" target="_blank" rel="noopener noreferrer" class="contact-orange-btn text-base px-6 py-2 font-semibold shadow-lg transform hover:scale-105 transition-all duration-200 inline-flex items-center gap-2 text-center" style="font-family: 'Poppins', sans-serif;">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H3a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Schedule a Meeting
          </a>
        </div>
      </div>
      
    </div>
  </div>
</section>

<style>
  /* Contact Button Styles */
  .contact-blue-btn {
    background-color: #3D4E76;
    border: 2px solid #3D4E76;
    color: white;
    text-decoration: none;
    border-radius: 5px;
  }
  
  .contact-blue-btn:hover {
    background-color: transparent;
    border: 2px solid #3D4E76;
    color: #3D4E76;
  }
  
  .contact-orange-btn {
    background-color: #F66733;
    border: 2px solid #F66733;
    color: white;
    text-decoration: none;
    border-radius: 5px;
  }
  
  .contact-orange-btn:hover {
    background-color: transparent;
    border: 2px solid #F66733;
    color: #F66733;
  }
</style>

