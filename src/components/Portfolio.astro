---
// Portfolio section component
---

<section id="portfolio" class="py-20 bg-muted/30">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      
      <!-- Portfolio Grid -->
      <div class="grid md:grid-cols-3 gap-8">
        
        <!-- Flexible Label Group -->
        <div class="group relative overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 h-[500px]">
          <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url('/flexible-label-group-website.jpg');"></div>
          <div class="absolute inset-0 bg-black/40 group-hover:bg-black/60 transition-all duration-300"></div>
          <div class="relative h-full flex flex-col justify-end p-8 text-white">
            <div class="transform transition-transform duration-300 group-hover:-translate-y-2">
              <span class="inline-block bg-white/20 backdrop-blur-sm text-white text-sm px-3 py-1 rounded-full font-medium mb-4" style="font-family: 'Poppins', sans-serif;">
                Website
              </span>
              <h3 class="text-2xl md:text-3xl font-bold mb-2" style="font-family: 'Poppins', sans-serif;">
                Flexible Lable Group
              </h3>
            </div>
          </div>
        </div>
        
        <!-- The QB Legacy -->
        <div class="group relative overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 h-[500px]">
          <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url('/the-qb-legacy-website.jpg');"></div>
          <div class="absolute inset-0 bg-black/40 group-hover:bg-black/60 transition-all duration-300"></div>
          <div class="relative h-full flex flex-col justify-end p-8 text-white">
            <div class="transform transition-transform duration-300 group-hover:-translate-y-2">
              <div class="flex gap-2 mb-4">
                <span class="inline-block bg-white/20 backdrop-blur-sm text-white text-sm px-3 py-1 rounded-full font-medium" style="font-family: 'Poppins', sans-serif;">
                  Sports
                </span>
                <span class="inline-block bg-white/20 backdrop-blur-sm text-white text-sm px-3 py-1 rounded-full font-medium" style="font-family: 'Poppins', sans-serif;">
                  Website
                </span>
              </div>
              <h3 class="text-2xl md:text-3xl font-bold mb-2" style="font-family: 'Poppins', sans-serif;">
                The QB Legacy
              </h3>
            </div>
          </div>
        </div>
        
        <!-- Clemson Sports -->
        <div class="group relative overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 h-[500px]">
          <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url('/clemson-sports-football.jpg');"></div>
          <div class="absolute inset-0 bg-black/40 group-hover:bg-black/60 transition-all duration-300"></div>
          <div class="relative h-full flex flex-col justify-end p-8 text-white">
            <div class="transform transition-transform duration-300 group-hover:-translate-y-2">
              <div class="flex gap-2 mb-4">
                <span class="inline-block bg-white/20 backdrop-blur-sm text-white text-sm px-3 py-1 rounded-full font-medium" style="font-family: 'Poppins', sans-serif;">
                  Photography
                </span>
                <span class="inline-block bg-white/20 backdrop-blur-sm text-white text-sm px-3 py-1 rounded-full font-medium" style="font-family: 'Poppins', sans-serif;">
                  Sports
                </span>
              </div>
              <h3 class="text-2xl md:text-3xl font-bold mb-2" style="font-family: 'Poppins', sans-serif;">
                Clemson Sports
              </h3>
            </div>
          </div>
        </div>
        
      </div>
      
    </div>
  </div>
</section>

